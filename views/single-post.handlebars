<div class="post-area">
    <div class="title-area">
        <h3>{{title}}</h3>
        <p>posted by {{user.username}} on {{format_date date_created}}</p>
    </div>

    <div class="post=text">
        {{post_text}}
    </div>
</div>

{{#if loggedIn}}
<form id="add-comment-form">
    <input id="comment_text" class="">
    <button id="commentButton" class="btn btn-secondary" type="submit">Comment</button>
</form>
{{/if}}

{{#each comments as |comment|}}
<div class="">
    <p>{{comment.comment_text}}</p>
    <p>{{comment.user.username}} {{format_date date_created}}</p>
</div>
{{/each}}

<script src="/js/comment.js"></script>

